@model List<Clems.Application.Services.TransactionHistoryDto>

<div class="space-y-4">
    @foreach (var t in Model)
    {
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden transition-all hover:shadow-md">
            <div class="p-4">
                <div class="flex justify-between items-start">
                    <div>
                        <h3 class="font-semibold text-gray-900">@t.Description</h3>
                        <p class="text-sm text-gray-500 mt-1">@t.Date.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                    </div>
                    <span class="px-3 py-1 rounded-full text-sm font-medium 
                        @(t.Amount >= 0 ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                        @(t.Amount >= 0 ? "+" : "")@t.Amount:C
                    </span>
                </div>
                
                <div class="mt-4 pt-4 border-t border-gray-100">
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600">Balance after</span>
                        <span class="font-medium text-gray-900">@t.BalanceAfter:C</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>