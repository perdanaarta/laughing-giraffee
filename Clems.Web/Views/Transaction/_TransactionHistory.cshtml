@model List<Clems.Application.Services.TransactionHistoryDto>

<div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold text-gray-700">Transaction History</h2>
    <button class="px-3 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700"
            onclick="addTransaction()">
        + Add Transaction
    </button>
</div>

<div class="grid gap-4">
    @foreach (var t in Model)
    {
        <div class="bg-gray-50 border rounded-xl p-4 shadow-sm flex flex-col sm:flex-row sm:justify-between sm:items-center">
            <div>
                <p class="text-sm text-gray-500">@t.Date.ToString("MMM dd, yyyy")</p>
                <p class="font-medium text-gray-800">@t.Description</p>
                <p class="text-xs text-gray-500">Account: @t.AccountType</p>
            </div>

            <div class="mt-3 sm:mt-0 text-right">
                <p class="text-base font-semibold @(t.Amount >= 0 ? "text-green-600" : "text-red-600")">
                    @(t.Amount >= 0 ? "+" : "")@t.Amount.ToString("C")
                </p>
                <p class="text-sm text-gray-600">Balance: @t.BalanceAfter.ToString("C")</p>
            </div>
        </div>
    }
</div>
