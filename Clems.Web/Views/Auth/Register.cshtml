@model Clems.Web.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    ViewData["Title"] = "Register";
}

<section class="flex items-center justify-center">
    <div class="max-w-md w-full">
        
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Register</h1>
        
        <form asp-action="Register" method="post" novalidate class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="validation"></div>
 
            <div class="field">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" class="p-2 mt-1 block w-full rounded-sm border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"/>
                <span asp-validation-for="Email" class="validation"></span>
            </div>

            <div class="field">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Password" class="p-2 mt-1 block w-full rounded-sm border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"/>
                <span asp-validation-for="Password" class="validation"></span>
            </div>

            <div class="field">
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="p-2 mt-1 block w-full rounded-sm border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"/>
                <span asp-validation-for="ConfirmPassword" class="validation"></span>
            </div>

            <button type="submit" class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition">
                Create account
            </button>
        </form>
        <p class="mt-6 text-center text-sm text-gray-600">
            Already have an account?
            <a asp-action="Login" class="text-blue-600 hover:text-blue-800 font-medium">Login</a>
        </p>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
