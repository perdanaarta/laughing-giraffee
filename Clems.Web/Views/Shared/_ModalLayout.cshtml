@model ModalViewModel

<div id="@Model.Id" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50">
    <div class="bg-white p-6 rounded-xl w-96 shadow-lg">
        <h3 class="text-lg font-bold mb-4">@Model.Title</h3>
        <form asp-controller="@Model.Controller" asp-action="@Model.Action" method="post" class="space-y-4">
            @RenderBody()  <!-- ✅ now legal -->
            <div class="flex justify-end gap-2">
                <button type="button" onclick="closeModal('@Model.Id')" class="px-4 py-2 bg-gray-300 rounded">Cancel</button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Save</button>
            </div>
        </form>
    </div>
</div>